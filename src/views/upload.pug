extends base

block content
    if errorMessage
        span=errorMessage 
    form(method="POST", enctype="multipart/form-data")
        label(for="video") Video File
        input(type="file", id="video", accept="video/*", required=true, name="video") 
        input(name="title", placeholder="Title", required, type="text", maxlenght=80)
        input(name="description", placeholder="Description", required, type="text", minlenght=20)
        input(name="hashtags", placeholder="Hashtags, separated by comma.", required, type="text")
        input(type="submit", value="UPload Video") 